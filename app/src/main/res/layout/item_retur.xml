<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/tvName" android:layout_width="0dp" android:layout_weight="2" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etQuantity" android:layout_width="0dp" android:layout_weight="1" android:inputType="numberDecimal" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etReturn" android:layout_width="0dp" android:layout_weight="1" android:inputType="numberDecimal" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvUnitPrice" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvTotal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
</LinearLayout>